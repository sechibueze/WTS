{
  "name": "wts",
  "version": "1.0.0",
  "description": "A public bus transport system RESTful api",
  "main": "src/app.js",
  "scripts": {
    "db-tables": "node src/models/DBTables.js createTables",
    "predev": "npm run db-tables",
    "dev": "set DEBUG=dev:* && nodemon --exec babel-node src/app.js",
    "prestart": "babel src --out-dir dist",
    "start": "node dist/models/DBTables.js createTables",
    "poststart": "node dist/app.js",
    "pretest": "npm run db-tables",
    "test": "cross-env NODE_ENV=test nyc mocha --timeout 10000 --exit src/test/*.spec.js",
    "lint": "eslint .",
    "test-with-coverage": "nyc --reporter=text --reporter=html mocha",
    "cover": "istanbul cover _mocha",
    "heroku-postbuild": "npm install --production",
    "coverage": "babel-node ./node_modules/istanbul/lib/cli cover _mocha test/index.js",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "coveralls": "cross-env NODE_ENV=test nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sechibueze/WTS.git"
  },
  "keywords": [
    "wayfarer",
    "transport",
    "RESTful api",
    "nodejs",
    "expressjs",
    "postgresql",
    "heroku"
  ],
  "author": "sechibueze",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sechibueze/WTS/issues"
  },
  "homepage": "https://github.com/sechibueze/WTS#readme",
  "devDependencies": {
    "@babel/cli": "^7.5.0",
    "@babel/core": "^7.5.4",
    "@babel/node": "^7.5.0",
    "@babel/preset-env": "^7.5.4",
    "@babel/register": "^7.4.4",
    "babel-plugin-istanbul": "^5.1.4",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "coveralls": "^3.0.5",
    "cross-env": "^5.2.0",
    "debug": "^4.1.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.18.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.19.1",
    "nyc": "^14.1.1"
  },
  "dependencies": {
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "make-runnable": "^1.3.6",
    "mocha": "^6.1.4",
    "npm-run-all": "^4.1.5",
    "pg": "^7.11.0"
  },
  "nyc": {
    "require": [
      "@babel/register"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "engines": {
    "node": "10.13.0",
    "npm": "6.4.1"
  },
  "nodemonConfig": {
    "env": {
      "NODE_ENV": "production"
    }
  }
}